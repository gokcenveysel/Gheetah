@model List<Gheetah.Models.AgentModel.AgentInfo>
<div class="page">
    <div class="page-header d-print-none">
        <div class="container-fluid">
            <h2 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M4 4h6v6h-6z" />
                    <path d="M14 4h6v6h-6z" />
                    <path d="M4 14h6v6h-6z" />
                </svg>
                Pending Agents Request
            </h2>
        </div>
    </div>
    <div class="page-body">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Pending Agent Requests</h3>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>OS</th>
                                <th>Environment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agent in Model)
                            {
                                <tr>
                                    <td>@agent.AgentId</td>
                                    <td>@agent.OS</td>
                                    <td>@agent.EnvironmentName</td>
                                    <td>
                                        <form asp-action="Accept" method="post" class="d-inline">
                                            <input type="hidden" name="agentId" value="@agent.AgentId" />
                                            <button type="submit" class="btn btn-success">Accept</button>
                                        </form>
                                        <form asp-action="Decline" method="post" class="d-inline">
                                            <input type="hidden" name="agentId" value="@agent.AgentId" />
                                            <button type="submit" class="btn btn-danger">Decline</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>