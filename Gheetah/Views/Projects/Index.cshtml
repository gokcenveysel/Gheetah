@using Gheetah.Services
@inject ILogService LogService
@{
    ViewData["Title"] = "Project Timeline";
    var logs = await LogService.GetLogsAsync();
    logs.Reverse();
}

<div class="page-header d-print-none">
    <div class="row align-items-center">
        <div class="col">
            <h2 class="page-title">Project Actions Timeline</h2>
            <div class="text-muted mt-1">Recent activities in the system</div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="timeline timeline-activity">
            @foreach (var log in logs)
            {
                <div class="timeline-item">
                    <div class="timeline-line"></div>
                    <div class="timeline-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        </svg>
                    </div>
                    <div class="timeline-content">
                        <div class="timeline-header">
                            <span class="timeline-time">@log.Timestamp.ToString("g")</span>
                            <span class="badge bg-blue-lt">@log.UserEmail</span>
                        </div>
                        <div class="timeline-body">
                            <p class="mb-2">
                                <span class="text-muted">Action:</span>
                                <code>@log.Action</code>
                            </p>
                            <p class="text-muted">@log.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>